<Window x:Class="ppedv.Blumenklavier.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ppedv.Blumenklavier.UI.WPF.Views"
        xmlns:local="clr-namespace:ppedv.Blumenklavier.UI.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Datei">

            </MenuItem>
            <MenuItem Header="Zeug...">

            </MenuItem>
        </Menu>
        
        <StatusBar Background="HotPink" Height="22" DockPanel.Dock="Bottom"/>
        
        <TabControl>
            <TabItem Header="Blumen">
                <views:BluemenView/>
            </TabItem>
            <TabItem Header="Klaviere">
                <views:KlavierView/>
            </TabItem>
        </TabControl>
        
    </DockPanel>
</Window>
